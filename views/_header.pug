header.header
  nav.nav.nav--posts
    a.nav__el(href='/') All posts
  .header__logo
    img(src='/img/favicon.png' alt='ReadU logo')
  nav.nav.nav--user
    if user
      a.nav__el.nav__el--logout Log Out
      a.nav__el(href='/me')
        img.nav__user-img(src=`img/user/${user.photo}`, alt=`${user.name}`)
        span= user.name.split(' ')[0]
    else
      a.nav__el.nav__el--cta(href='/login') Log in
      a.nav__el.nav__el--cta(href='/signup') Sign Up